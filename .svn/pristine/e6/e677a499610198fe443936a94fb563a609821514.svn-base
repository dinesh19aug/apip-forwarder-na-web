body {
    font-family: Arial, Helvetica, sans-serif;
    background-color: #F5F5F5;
    color: #4D5357;
    line-height: 1;
}

form {
    padding: 0 25px;
}
#header{
    margin-bottom: 15px;
    display: block;
}

.container{
    position: relative;
    width: 840px;
    margin: 0 auto;
}

#payment_label{
    padding:5px;
    background-color: #002e5f;
    font-size: 14px;
    color: #fff;
    text-align: left;
    width: 830px;
}

#amount_label{
    padding: 5px;
    background-color: #A3D5EA;
}

.left_column{
    float: left;
    margin-bottom: 30px;
    border: 1px solid #D0D0D0;
    border-radius: 10px;
    width: 410px;
    background-color: #fff;
}

.right_column {
    float: right;
    margin-bottom: 30px;
    border: 1px solid #D0D0D0;
    border-radius: 10px;
    width: 410px;
    background-color: #fff;
}

.inner-container{
    float: left;
    margin-bottom: 10px;
    margin-top: 5px;
    border: 1px solid #D0D0D0;
    border-radius: 10px;
    width: 100%;
    background-color: #fff;
}

input{
    background-color: #f9f9f9;
}

input, textarea {
    padding: 6px;
}

select, input, textarea {
    border: 1px solid #D0D0D0;
    -moz-border-radius: 4px;
    -webkit-border-radius: 4px;
    -khtml-border-radius: 4px;
    border-radius: 4px;
}

label, input, textarea {
    font-size: 1.2em;
    clear: both;
    display: block;
    clear: both;

}

.lpadded{
    padding: 5px;
    margin-bottom: 5px;
}

.input_label {
    font-size: 14px;
    font-family: Helvetica, Verdana,sans-serif;
    clear: both;
    display: block;
    clear: both;
    font-weight: bold;
    padding: 4px;
    display: block;
    margin-bottom: 5px;
    border: 1px solid #D0D0D0;
    border-radius: 5px;
    background-color: #becef4;
}

.info_label{
    margin: 20px 25px 12px;
    padding-bottom: 13px;
    font-size: 1.1em;
}

.data{
    font-size: 14px;
    font-family: Verdana;
    clear: both;
    display: block;
    clear: both;
    padding: 10px;
    display: block;
    margin-bottom: 5px;
    font-kerning: inherit;
    font-stretch: ultra-expanded;
    font-weight: 500;
}

input[type=submit] {
    padding:5px 15px;
    background:#002e5f;
    color: #fff;
    border:0 none;
    cursor:pointer;
    -webkit-border-radius: 5px;
    border-radius: 5px;
}
input[type=button] {
    padding:5px 15px;
    background: #002e5f;
    color: #fff;
    border:0 none;
    cursor:pointer;
    -webkit-border-radius: 5px;
    border-radius: 5px;
}

.error{
    margin:10px 22px;
    color: #D8000C;
    vertical-align:middle;
    border-radius:.5em;

}

.inner-container-error{
    float: left;
    margin-bottom: 10px;
    margin-top: 5px;
    border: 1px solid #D8000C;
    border-radius: 10px;
    width: 100%;
    background-color: #fff;
}




